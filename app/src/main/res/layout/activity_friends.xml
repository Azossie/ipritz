<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <!-- brauchen bei android keinen back button... -->
        <ImageButton
            android:id="@+id/friendsBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/friendsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_friends"
            android:layout_below="@id/friendsBackButton"
            style="@style/h3" />

        <ListView
            android:id="@+id/friendsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/friendsHeader"></ListView>
    </RelativeLayout>

</RelativeLayout>